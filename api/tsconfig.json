{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "module": "CommonJS",
    "target": "ES2022",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}